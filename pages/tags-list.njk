---
permalink: /tags/
layout: layouts/base.njk
---

<div class="page-tag-list mb-5">
    <h1>Tags</h1>
    {% for tag in collections.tagListCloud %}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
    {% endfor %}
</div><!-- end margin -->


<div class="page-tag-list mb-5">
    <h1>Authors</h1>
    {% for tag in collections.tagListAuthors %}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
    {% endfor %}
</div><!-- end margin -->

