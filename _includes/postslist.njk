<div class="post-container mx-auto pb-5 border-bottom mb-5">
    {% for post in postslist | reverse %}
        <div class="postlist-item pb-4 border-bottom mb-4">
            <a href="{{ post.url | url }}" class="postlist-link">
                <h2>{{ post.data.title }}</h2>
            </a>

            <p>{{ post.data.description }}</p>

            <div class="d-flex align-items-center mb-2 post-footer">
                <div>
                    <time datetime="{{ post.date | htmlDateString }}">Posted on {{ post.date | readableDate }}</time>
                    <div class="post-tags">
                        <span class="d-inline-block">Category: </span>
                        {% for tag in post.data.tags %}
                            {%- if collections.tagList.indexOf(tag) != -1 -%}
                                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                                <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
                            {%- endif -%}
                        {% endfor %}
                    </div>
                </div>

                <div class="col-auto">
                    <a class="btn btn-outline-primary" href="{{ post.url }}">Read Post</a>
                </div>
            </div>
        </div><!-- end postlist item -->
    {% endfor %}
</div>
