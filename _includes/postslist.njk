<div class="post-container mx-auto pb-5 mb-5">
    {% set postCountNum %}{% endset %}
    {% for post in postslist | reverse %}
        <div class="postlist-item pb-4 border-bottom mb-4">
            <a href="{{ post.url | url }}" class="postlist-link">
                <h2>{{ post.data.title }}</h2>
            </a>

            <p class="font-weight-bold">
                <a href="{{ post.data.sourceURL }}" target="_blank" rel="noopener">{{ post.data.source }}</a>
            </p>

            <p>{{ post.data.description }}</p>

            <div class="d-flex align-items-center mb-2 post-footer">
                <div>
                    <time datetime="{{ post.date | htmlDateString }}">Posted on {{ post.date | readableDate }}</time>
                    <div class="post-tags">
                        <span class="d-inline-block">Tags: </span>
                        {% for tag in post.data.tags %}
                            {%- if collections.tagList.indexOf(tag) != -1 -%}
                                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                                <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
                            {%- endif -%}
                        {% endfor %}
                    </div>
                </div>

                <div class="col-auto">
                    <a class="btn btn-outline-primary" href="{{ post.url }}">
                        Read Post
                        {% if page.url == "/posts/" %}<span>#{{ loop.revindex }}</span>{% endif %}
                    </a>
                </div>
            </div>
        </div><!-- end postlist item -->
    {% endfor %}
</div>
